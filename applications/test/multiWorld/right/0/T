FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    left
    {
//        type            fixedValue;
//        value           uniform 0.5;


        type            mappedField;

        // Simulation world to sample
        sampleWorld     LEFT;

        // What to sample:
        sampleMode      nearestPatchFace;

        // If sampleMode is nearestPatchFace : patch to find faces of
        samplePatch     right;

        // According to offsetMode (see above) supply one of
        // offset, offsets or distance
        offset          (0 0 0);

        value           uniform 0.0;
    }

    right
    {
        type            fixedValue;
        value           uniform 1;
    }

    frontAndBack
    {
        type            empty;
    }
}

